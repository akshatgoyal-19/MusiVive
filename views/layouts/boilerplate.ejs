<script>
function setupLyricsSync() {
  const lyrics = window.songLyrics || [];
  window.parsedLyrics = lyrics;

  const container = document.getElementById("lyrics-lines");
  if (!container) {
    console.warn("‚ö†Ô∏è lyrics container not found");
    return;
  }

  container.innerHTML = "";

  if (!lyrics.length) {
    const fallback = document.createElement("li");
    fallback.textContent = "No lyrics available";
    fallback.style.color = "#888";
    container.appendChild(fallback);
    console.warn("‚ö†Ô∏è No lyrics to render");
    return;
  }

  lyrics.forEach((line, i) => {
    const li = document.createElement("li");
    li.textContent = line.text;
    li.dataset.time = line.time;
    li.id = `lyric-${i}`;
    li.style.color = "#aaa";
    li.style.padding = "2px 0";
    container.appendChild(li);
  });

  console.log("‚úÖ Lyrics rendered", lyrics);
}
</script>


